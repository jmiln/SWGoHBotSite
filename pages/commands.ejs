<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <title>SWGoHBot Commands</title>
        <link rel="stylesheet" href="/css/commands.css">
    </head>

    <body>
        <header>
            <%- include("../partials/nav") %>
        </header>

        <div class="container my-5">
            <% if (commandData.error) { %>
                <!-- Error state -->
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Error Loading Commands</h4>
                    <p><%= commandData.error %></p>
                </div>
            <% } else { %>
                <!-- Success state -->
                <div class="commands-header">
                    <h1>Bot Commands</h1>
                    <div class="commands-metadata">
                        Last updated: <%= new Date(commandData.metadata.generatedAt).toLocaleString() %> |
                        Total commands: <span class="badge bg-primary"><%= commandData.metadata.totalCommands %></span>
                    </div>
                </div>

                <div class="commands-container">
                    <!-- Sidebar Navigation -->
                    <aside class="commands-sidebar">
                        <div class="sidebar-header">Categories</div>
                        <ul class="category-list">
                            <%
                            const categories = Object.keys(commandData).filter(key => key !== 'metadata');
                            for (const categoryName of categories) {
                                const category = commandData[categoryName];
                            %>
                                <li class="category-item" data-category="<%= categoryName %>" tabindex="0" role="button" aria-selected="false">
                                    <%= categoryName %>
                                    <span class="badge bg-secondary"><%= category.commands.length %></span>
                                </li>
                            <% } %>
                        </ul>
                    </aside>

                    <!-- Commands Content Area -->
                    <main class="commands-content">
                        <%
                        // Render each category's commands as a separate grid
                        for (const categoryName of categories) {
                            const category = commandData[categoryName];
                        %>
                            <div class="command-grid" data-category="<%= categoryName %>">
                                <!-- Grid Header (desktop only) -->
                                <div class="grid-header">
                                    <div class="grid-header-cell">Command</div>
                                    <div class="grid-header-cell">Description</div>
                                    <div class="grid-header-cell">Usage</div>
                                </div>

                                <!-- Grid Body -->
                                <div class="grid-body">
                                    <% for (const command of category.commands) { %>
                                        <div class="command-row">
                                            <!-- Name Cell -->
                                            <div class="command-cell" data-label="Command">
                                                <span class="command-name">/<%= command.name %></span>
                                            </div>

                                            <!-- Description Cell -->
                                            <div class="command-cell" data-label="Description">
                                                <span class="command-description"><%= command.description %></span>
                                            </div>

                                            <!-- Usage Cell -->
                                            <div class="command-cell" data-label="Usage">
                                                <div class="command-usage">
                                                    <% if (command.usage && command.usage.length > 0) { %>
                                                        <% for (const usage of command.usage) { %>
                                                            <span class="usage-example"><%= usage %></span>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="usage-example">/<%= command.name %></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    </main>
                </div>
            <% } %>
        </div>

        <footer>
            <%- include("../partials/footer") %>
        </footer>

        <!-- Load commands JavaScript -->
        <script src="/js/commands.js"></script>
    </body>
</html>
