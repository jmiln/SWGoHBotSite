<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <title>SWGoHBot Commands</title>
        <link rel="stylesheet" href="/css/commands.css">
    </head>

    <body>
        <header>
            <%- include("../partials/nav") %>
        </header>

        <div class="container my-5">
            <% if (commandData.error) { %>
                <!-- Error state -->
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Error Loading Commands</h4>
                    <p><%= commandData.error %></p>
                </div>
            <% } else { %>
                <!-- Success state -->
                <div class="commands-header">
                    <h1>Bot Commands</h1>
                    <div class="commands-metadata">
                        Last updated: <%= new Date(commandData.metadata.generatedAt).toLocaleString() %> |
                        Total commands: <span class="badge bg-primary"><%= commandData.metadata.totalCommands %></span>
                    </div>
                </div>

                <div class="commands-container">
                    <!-- Sidebar Navigation -->
                    <aside class="commands-sidebar">
                        <div class="sidebar-header">Categories</div>
                        <ul class="category-list">
                            <%
                            const categories = Object.keys(commandData).filter(key => key !== 'metadata');
                            for (const categoryName of categories) {
                                const category = commandData[categoryName];
                            %>
                                <li class="category-item" data-category="<%= escapeAttr(categoryName) %>" tabindex="0" role="button" aria-selected="false">
                                    <%= categoryName %>
                                    <span class="badge bg-secondary"><%= category.commands.length %></span>
                                </li>
                            <% } %>
                        </ul>

                        <!-- Filters Section (inside sidebar) -->
                        <div class="filters-section">
                            <div class="sidebar-header">Filters</div>
                            <div class="filters-content">
                                <label class="filter-item">
                                    <input type="checkbox" id="filter-dm">
                                    <span>Available in DMs</span>
                                </label>
                                <label class="filter-item">
                                    <input type="checkbox" id="filter-admin">
                                    <span>Admin only</span>
                                </label>
                                <button id="reset-filters" class="reset-button" style="display: none;">Reset Filters</button>
                            </div>
                        </div>
                    </aside>

                    <!-- Commands Content Area -->
                    <main class="commands-content">
                        <%
                        // Render each category's commands as a separate grid
                        for (const categoryName of categories) {
                            const category = commandData[categoryName];
                        %>
                            <div class="command-grid" data-category="<%= escapeAttr(categoryName) %>">
                                <!-- Grid Header (desktop only) -->
                                <div class="grid-header">
                                    <div class="grid-header-cell">Command</div>
                                    <div class="grid-header-cell">Description</div>
                                    <div class="grid-header-cell">Usage</div>
                                </div>

                                <!-- Grid Body -->
                                <div class="grid-body">
                                    <% for (const command of category.commands) { %>
                                        <div class="command-row" data-permlevel="<%= escapeAttr(String(command.permLevel)) %>" data-contexts="<%= escapeAttr(command.contexts.join(',')) %>">
                                            <!-- Name Cell -->
                                            <div class="command-cell" data-label="Command">
                                                <span class="command-name">/<%= command.name %></span>
                                            </div>

                                            <!-- Description Cell -->
                                            <div class="command-cell" data-label="Description">
                                                <span class="command-description"><%= command.description %></span>
                                            </div>

                                            <!-- Usage Cell -->
                                            <div class="command-cell" data-label="Usage">
                                                <div class="command-usage">
                                                    <% if (command.usage && command.usage.length > 0) { %>
                                                        <% for (const usage of command.usage) { %>
                                                            <%
                                                            // HTML escape the entire string first
                                                            const escapedUsage = usage
                                                                .replace(/&/g, '&amp;')
                                                                .replace(/</g, '&lt;')
                                                                .replace(/>/g, '&gt;')
                                                                .replace(/"/g, '&quot;');
                                                            // Then replace **/cmd** with bold formatting
                                                            const formattedUsage = escapedUsage.replace(/\*\*\/([^*]+)\*\*/g, '<strong>/$1</strong>');
                                                            %>
                                                            <span class="usage-example"><%- formattedUsage %></span>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="usage-example"><strong>/<%= command.name %></strong></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    </main>
                </div>
            <% } %>
        </div>

        <%- include("../partials/footer") %>

        <!-- Load commands JavaScript -->
        <script src="/js/commands.js"></script>
    </body>
</html>
