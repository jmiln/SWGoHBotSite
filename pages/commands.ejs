<style>
.nav-tabs .nav-item .nav-link {
    display: block;
    padding: .5rem .9rem;
}
</style>

<script type="text/javascript">
    // If someone it trying to link to a specific tab
    if (window.location.hash) {
        var hash = window.location.hash;
        hash = hash.replace("#", "");

        // Make sure it's a valid id, else just go to the default one
        if ($("#"+hash).length && $(".nav-link#tab-" + hash).length) {
            //  First remove class "active" from currently active tab & table
            $(".nav-link").removeClass('active');
            $(".tab-pane").removeClass("active");

            // Add the active class to the appropriate ones
            $(".nav-link#tab-" + hash).addClass("active")
            $("#" + hash).addClass("active");
        }
    }

	$(document).ready(function() {
        //  When user clicks on tab, show the corresponding table
        $(".nav-tabs .nav-link").click(function() {
            //  Here we get the href value of the selected tab
            var selected_tab = $(this).attr("href");

            window.location.hash = selected_tab;

            //  First remove class "active" from currently active tab & table
            $(".nav-link").removeClass('active');
            $(".tab-pane").removeClass("active");

            //  Now add class "active" to the selected/clicked tab & table
            $(this).addClass("active");
            $(selected_tab).addClass("active");

            // Return false so it doesn't scroll for you
            return false;
        });
    });
</script>
