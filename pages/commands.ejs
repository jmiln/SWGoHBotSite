        <div class="page-wrapper">
            <div class="page-commands">
                <div class="columns centered">
                    <div class="column w20">
                        <h3 class="cat-header">Command Categories</h3>
                        <hr/>
                        <div class="navigation-menu">
                            <ul class="menu-list">
                                <li><a class="nav-link active" id="tab-admin"     href="#admin"    >Admin</a></li>
                                <li><a class="nav-link"        id="tab-misc"      href="#misc"     >Misc</a></li>
                                <li><a class="nav-link"        id="tab-star-wars" href="#star-wars">Star Wars</a></li>
