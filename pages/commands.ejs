        <header>
            <% include ../partials/nav %>
            <style>
                .sidenav {
                    background-color: #2b2b2b;
                    height: 100%;
                    color: white;
                    padding: 15px;
                }
                th {
                    background-color: #2b2b2b;
                }
                table.table-striped > thead > tr > th {
                    border-top:1px solid #2b2b2b;
                    border-bottom:1px solid #2b2b2b;
                }
                table.table-striped > tbody > tr > td{
                    border-top:1px solid #2b2b2b;
                    border-bottom:1px solid #2b2b2b;
                }
                pre code {
                    color: white;
                }
            </style>
        </header>
        <div class="container">
            <h2>Commands</h2>
            <div class="row content">
                <div class="col-sm-2 sidenav border-right rounded">
                    <nav class="nav nav-pills flex-column">
                        <% var commandCats = Object.keys(command_list); %>
                        <% for(var i=0; i < commandCats.length; i++) { %>
                            <a href="#<%= commandCats[i].split(' ').join('').toLowerCase() %>" class="nav-link<% if(i===0) { %> active<% } %>" data-toggle="pill" role="tab">
                                <%= commandCats[i] %>
                            </a>
                        <% } %>
                    </nav>

                </div>

                <div class="col-sm-9">
                    <div class="tab-content">
                        <% for(var i=0; i < commandCats.length; i++) { %>
                            <div class="tab-pane<% if(i===0) { %> active<% } %>"  id="<%= commandCats[i].split(' ').join('').toLowerCase() %>" role="tabpanel">
                                <table class="table table-striped table-sm">
                                    <thead>
                                        <tr><th>Command</th><th>Description</th><th>Usage</th></tr>
                                    </thead>
                                    <tbody>

                                        <% command_list[commandCats[i]].forEach(command => { %>
                                            <tr class="clickable" data-toggle="collapse" href="#<%= command.help.name.split(' ').join('') %>-collapse" aria-expanded="false" aria-controls="<%= command.help.name.split(' ').join('') %>-collapse">
                                                <td width="15%"><strong><%= command.help.name %></strong></td>
                                                <td width="45%"><%= command.help.description %></td>
                                                <td width="40%"><%= command.help.usage %></td>
                                            </tr>
                                            <tr id="<%= command.help.name.split(' ').join('') %>-collapse" class="collapse">
                                                <td></td>
                                                <td colspan="2" >
                                                    <strong>Aliases: </strong> <%= command.conf.aliases.join(', ') %></br>
                                                    <strong>Example: </strong> <%= command.help.example %></br>
                                                    <strong>Extended Help: </strong></br> <span style="color:white"><%- command.help.extended %></span>
                                                </td>
                                            </tr>
                                        <% }); %>
                                        
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
